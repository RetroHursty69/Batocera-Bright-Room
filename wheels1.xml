<theme>
   <formatVersion>7</formatVersion>

      <view name="system">
         <carousel name="systemcarousel">
          <zIndex>400</zIndex>	      
          <type>vertical</type>
          <pos>0.695 0.035</pos>
          <size>0.27 0.71</size>
          <logoSize>0.2 0.2</logoSize>
          <color>00000000</color>
          <maxLogoCount>7</maxLogoCount>
          <logoAlignment>center</logoAlignment>                        
         </carousel>
		<image name="logo">
		<linearSmooth>true</linearSmooth>
			<storyboard event="activate">
				<animation property="x" to="1" begin="4000" duration="1000" mode="EaseIn"/>
				<animation property="opacity" from="0" to="1" duration="150" mode="Linear"/>
				<animation property="opacity" from="1" to="1" begin="1150" duration="35" mode="Linear"/>
			</storyboard>
			<storyboard event="scroll">
				<animation property="x" to="1" begin="4000" duration="1000" mode="EaseIn"/>
				<animation property="opacity" from="0" to="1" duration="150" mode="Linear"/>
				<animation property="opacity" from="1" to="1" begin="1150" duration="35" mode="Linear"/>
			</storyboard>
			<storyboard event="deactivate">
				<animation property="x" to="1" begin="4000" duration="1000" mode="EaseIn"/>
				<animation property="opacity" from="0" to="1" duration="150" mode="Linear"/>
				<animation property="opacity" from="1" to="1" begin="1150" duration="35" mode="Linear"/>
			</storyboard>
		</image>          
      <text name="systemInfo">     
         <pos>0.02 0.51</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>ffffff</color>
         <fontPath>./_inc/fonts/junegull rg.otf</fontPath>
	     <fontSize>0.012</fontSize>
         <zIndex>401</zIndex>
         <alignment>center</alignment> 	     
      </text>   
  
		<text name="TextDescShort" extra="true">
			<pos>1.2 0.048</pos>
			<fontPath>./../_inc/fonts/junegull rg.otf</fontPath>
			<color>000000</color>
			<fontSize>0.035</fontSize>
			<lineSpacing>1.1</lineSpacing>
			<zIndex>800</zIndex>
			<storyboard>
				<animation property="opacity" to="0" begin="0" duration="0" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="4500" duration="1000" mode="EaseIn"/>
			</storyboard>	
		</text>	 
      
		<text name="TextDescCategory" extra="true">
            <pos>0.07 0.51</pos>
			<fontPath>./../_inc/fonts/junegull rg.otf</fontPath>
			<color>000000</color>
			<fontSize>0.015</fontSize>
			<lineSpacing>1.1</lineSpacing>
			<zIndex>800</zIndex>
			<storyboard>
				<animation property="opacity" to="0" begin="0" duration="0" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="4500" duration="1000" mode="EaseIn"/>
			</storyboard>	
		</text>	      
		<text name="TextDescYear" extra="true">
			<pos>0.187 0.51</pos>
			<fontPath>./../_inc/fonts/junegull rg.otf</fontPath>
			<color>000000</color>
			<fontSize>0.015</fontSize>
			<lineSpacing>1.1</lineSpacing>
			<zIndex>800</zIndex>
			<storyboard>
				<animation property="opacity" to="0" begin="0" duration="0" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="4500" duration="1000" mode="EaseIn"/>
			</storyboard>	
		</text>		
		               
     <image name="logo">
       <linearSmooth>true</linearSmooth>
	   <path>./_inc/images/wheel_default1.png</path>
	   <path>./${system.theme}/_inc/system1.png</path>	   
	   </image>
      <image name="background3" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>3</zIndex>                 
         <path>./_inc/room.png</path>
      </image>         
      <image name="background10" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>900</zIndex>                 
         <path>./_inc/cab.png</path>
			<storyboard>
				<animation property="opacity" to="1" begin="0" duration="0" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="1500" duration="1000" mode="EaseIn"/>
			</storyboard>         
      </image>      
      
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>3</zIndex>                 
         <path>./_inc/images/wheelhanger1.png</path>
